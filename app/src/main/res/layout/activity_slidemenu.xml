<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.example.lee.slidemenu_library.view.SlideMenu
        android:id="@+id/slideMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rightPadding="100dp"
        android:background="@drawable/bg_slide_menu">
        <LinearLayout
            android:id="@+id/wapper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <include
                android:id="@+id/menu"
                layout="@layout/act_slide_left_menu"/>
            <LinearLayout
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_act_slide_content"
                android:orientation="horizontal">
                <!--此处为主界面的内容-->
                <ImageButton
                    android:id="@+id/buttonToggle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:background="#0000"
                    android:scaleType="fitXY"/>
            </LinearLayout>

        </LinearLayout>

    </com.example.lee.slidemenu_library.view.SlideMenu>

</RelativeLayout>
